<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/Gris"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:onClick="regresar"
        android:src="@drawable/boton_regresar" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/ingresa" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Insumo:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reg1"
        android:layout_width="385dp"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/inventario1"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Medida:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reg2"
        android:layout_width="385dp"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inventario1"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Stock Actual:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reg3"
        android:layout_width="385dp"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inventario1"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Stock Minimo:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reg4"
        android:layout_width="385dp"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/inventario1"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnregistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/agregar_redondo"
        android:backgroundTint="#FB8C00"
        android:onClick="onclick"
        android:text="Ingresar a Inventario"
        android:textSize="30sp" />
</LinearLayout>
